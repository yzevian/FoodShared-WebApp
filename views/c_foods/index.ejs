<% include ../partials/header %>

<% if(currentUser && currentUser.isAdmin){ %>
    <h1>Logged in as Admin</h1>
<% } %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1><i class="fas fa-utensils"></i> Welcome To J Food Blogger!</h1>
            <p>A place for people to share about their Japanese food experiences</p>
            <p>
             <a  class="btn btn-primary btn-lg" href="/c_food/new">Add a new entry</a>   
            </p>
        </div>
    </header>
    
        <div class="row" style="display:flex; flex-wrap: wrap">
            <% c_food.forEach(function(c_food){%>
                <div class="col-lg-9 col-md-9 col-sm-9 col-centered">
                    <div class="thumbnail">
                         <img src="<%= c_food.image %>">
                         <div class="caption">
                            <h4><%= c_food.name %></h4>
                         </div>
                         <p>
                             <a href="/c_food/<%= c_food._id%>" class="btn btn-primary">More Info</a></a>
                         </p>
                    </div>
                </div>
            <% }) %>
        </div>
</div>

<% include ../partials/footer %>



